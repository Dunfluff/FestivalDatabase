package database;
import java.sql.*;
import java.util.*;


public class DatabaseController {
    private final String url = "jdbc:postgresql://pgserver.mah.se/mScheduler";
    private final String user = "ai0923";
    private final String password = "bgm9o0w2";
 
    /**
     * Connect to the PostgreSQL database
     *
     * @return a Connection object
     * @throws java.sql.SQLException
     */
    public Connection connect() throws SQLException {
        return DriverManager.getConnection(url, user, password);
    }
    
    public void getScene() {
    	 
        String SQL = "SELECT * FROM scene";
 
        try (Connection conn = connect();
                Statement stmt = conn.createStatement();
                ResultSet rs = stmt.executeQuery(SQL)) {
            // display actor information
            displayQuery(rs);
        } catch (SQLException ex) {
            System.out.println(ex.getMessage());
        }
    }
    
    /**
     * Display query
     *
     * @param rs
     * @throws SQLException
     */
    private void displayQuery(ResultSet rs) throws SQLException {
        while (rs.next()) {
            System.out.println(rs.getString("SceneId") + "\t"
                    + rs.getString("Name") + "\t"
                    + rs.getString("Time") + "\t"
                    + rs.getString("BandId"));
 
        }
    }
}

